{
  "cli": {
    "version": ">= 10.0.0",
    "appVersionSource": "remote",
    "requireCommit": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": { 
        "resourceClass": "m-medium", 
        "simulator": true 
      },
      "android": { "gradleCommand": ":app:assembleDebug" }
    },
    "production": {
      "ios": { "autoIncrement": "buildNumber" },
      "android": { "autoIncrement": "versionCode" }
    }
  },
  "submit": {
    "production": {}
  }
}