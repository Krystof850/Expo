entrypoint = "README.md"
modules = ["nodejs-20", "web", "nix"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 33891
externalPort = 8000

[[ports]]
localPort = 35265
externalPort = 6000

[[ports]]
localPort = 37741
externalPort = 4200

[[ports]]
localPort = 42065
externalPort = 5000

[[ports]]
localPort = 42231
externalPort = 3003

[[ports]]
localPort = 42563
externalPort = 3002

[[ports]]
localPort = 42653
externalPort = 6800

[workflows]

[[workflows.workflow]]
name = "EAS Init"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas init"

[[workflows.workflow]]
name = "EAS Update"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas update --auto"

[[workflows.workflow]]
name = "EAS Publish Preview iOS"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas build --platform ios --profile preview"

[[workflows.workflow]]
name = "EAS Publish Preview Android"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas build --platform android --profile preview"

[agent]
expertMode = true
integrations = ["javascript_openai:1.0.0"]

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "expo", "export", "-p", "web"]
build = ["npm", "install"]
